{% extends "/notices/base-error.twig" %}

{% block notice_body %}
	<p>{{ strings.message }}</p>
	<p><a href="#" id="ForceOffDelete">{{ strings.delete }}</a></p>

	<script type="text/javascript">
		jQuery( document ).on(
			'click',
			'a#ForceOffDelete',
			delete_force_off
		);

		function delete_force_off() {
			iCWP_WPSF_BodyOverlay.show();
			jQuery.get( ajaxurl, {{ ajax.delete_forceoff|raw }} )
				  .always(
					  function () {
						  location.reload();
					  }
				  );
		}
	</script>
{% endblock %}