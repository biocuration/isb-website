<div class="row insights_widget" id="SectionTrafficTable">

	<div class="col-lg-10 col-md-9 col-sm-8">
		<div class="card">
			<div class="card-header">
				<h5 class="card-title">{{ strings.traffic_title }}</h5>
				<h6 class="card-subtitle text-muted">{{ strings.traffic_subtitle }}</h6>
			</div>
			<div class="card-body">
				<div id="TableTraffic"></div>
			</div>
		</div>
	</div>

	<div class="col-lg-2 col-md-3 col-sm-4">

		<div id="TrafficFilter" class="table-side-filter">
			<h6 class="mt-3">{{ strings.title_filter_form }}</h6>
			<form id="TrafficFilterForm">
				<div class="form-group">
					<label for="_fIp">{{ strings.ip_address }}</label>
					<select id="_fIp" name="fIp" class="form-control">
						<option value="">-- {{ strings.select }} --</option>
						{% for unique_ip in vars.unique_ips %}
							<option value="{{ unique_ip }}">{{ unique_ip }}</option>
						{% endfor %}
					</select>
				</div>
				<div class="form-group">
					<label for="_fPath">{{ strings.path_contains }}...</label>
					<input type="text" id="_fPath" name="fPath" placeholder=""
						   class="form-control-plaintext" />
				</div>
				<div class="form-group">
					<label for="_fResponse">{{ strings.response }}</label>
					<select id="_fResponse" name="fResponse" class="form-control">
						<option value="">-- {{ strings.select }} --</option>
						{% for unique_response in vars.unique_responses %}
							<option value="{{ unique_response }}">{{ unique_response }}</option>
						{% endfor %}
					</select>
				</div>
				<div class="form-group">
					<label for="_fUsername">{{ strings.username }}</label>
					<select id="_fUsername" name="fUsername" class="form-control">
						<option value="">-- {{ strings.select }} --</option>
						{% for uniq_user in vars.unique_users %}
							<option value="{{ uniq_user }}">{{ uniq_user }}</option>
						{% endfor %}
					</select>
					<small id="fUsernameHelp" class="form-text text-muted">
						{{ strings.username_ignores }}
					</small>
				</div>
				<div class="form-group">
					<label for="_fLoggedIn">{{ strings.logged_in }}?</label>
					<select id="_fLoggedIn" name="fLoggedIn" class="form-control">
						<option value="-1" selected>-- {{ strings.select }} --</option>
						<option value="1">{{ strings.yes }}</option>
						<option value="0">{{ strings.no }}</option>
					</select>
				</div>
				<div class="form-group">
					<label for="_fOffense">{{ strings.offense|capitalize }}?</label>
					<select id="_fOffense" name="fOffense" class="form-control">
						<option value="-1" selected>-- {{ strings.select }} --</option>
						<option value="1">{{ strings.yes }}</option>
						<option value="0">{{ strings.no }}</option>
					</select>
				</div>
				<div class="form-group">
					<label class="form-check-label" for="_fExcludeYou" title="{{ strings.exclude_your_ip_tooltip }}">
						{{ strings.exclude_your_ip }}?</label>
					<input type="checkbox" id="_fExcludeYou" name="fExcludeYou" value="Y"
						   class="form-control" />
				</div>

				<div class="form-group text-right">
					<input id="SubmitForm" href="#" class="btn btn-info" type="submit"
						   value="{{ strings.filters_apply }}" />
					<a id="ClearForm" href="#" class="btn btn-link">{{ strings.filters_clear }}</a>
				</div>

			</form>
		</div>
	</div>

</div>

<script>
	var $oTableTraffic = jQuery( '#TableTraffic' ).icwpWpsfAjaxTable(
		{
			'ajax_render':{{ ajax.render_table_traffic|raw }}
		}
	);
	jQuery( document ).icwpWpsfTableWithFilter(
		{
			'table': $oTableTraffic,
			'selector_filter_form': 'form#TrafficFilterForm'
		}
	);
</script>