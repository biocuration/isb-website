{% block inline_styles %}
{% endblock %}

<div class="container-fluid {{ classes.top_container|default('') }}">
	<div id="odp-body-container" class="odp-admin-page {{ classes.page_container|default('') }}">
		{% block h1heading %}<h1 style="height: 0; display: none">&nbsp;</h1>{% endblock %}
		<div id="odp-PageContainer">
		{% block body %}
			<div class="row" id="odp-PageHead">
				<div class="col">
					{% block page_head %}Override this block for the header area{% endblock %}
				</div>
			</div>

			<div class="row" id="odp-PageMain">
				<div class="col">
					{% block page_main %}Override this block for the body area{% endblock %}
				</div>
			</div>

			<div class="row" id="odp-PageFoot">
				<div class="col">
					{% block page_foot %}Override this block for the footer area{% endblock %}
				</div>
			</div>
		{% endblock %}
		</div>
	</div>
</div>

{% block pro_promo %}
	{% if flags.show_promo %}
		<div id="FooterWizardBanner" class="container-fluid">
		<div id="WizardBanner" class="row">
			<div class="col-xl-5 offset-xl-1 col-6">
				<h6 class="text-left">{{ strings.join_thousands_H }}</h6>
				   <p>{{ strings.pro_features }}: {{ strings.join_thousands_P }}</p>
			</div>
			<div class="offset-1 col-3">
				<a href="{{ hrefs.go_pro }}" target="_blank" class="btn btn-success">
					{{ strings.get_pro_protection }} </a>
			</div>
		</div>
	</div>
	{% endif %}
{% endblock %}

{% block inline_scripts %}
{% endblock %}
